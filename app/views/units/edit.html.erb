<!-- app/views/units/edit.html.erb -->
<h1>Edit Unit for <%= @student.full_name %></h1>

<%= form_with model: [@student, @unit], local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :grade %>
    <%= form.number_field :grade %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', student_path(@student) %>
